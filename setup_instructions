# 1) Clone & enter
git clone <repo-url> stitching_institute
cd stitching_institute

# 2) Create venv
python -m venv .venv
source .venv/bin/activate   # Windows: .venv\Scripts\activate

# 3) Install deps
pip install --upgrade pip
pip install -r requirements.txt

# 4) Env
cp .env.example .env   # then edit values if needed

# 5) Migrate & create superuser
python manage.py migrate
python manage.py createsuperuser

# 6) (Optional) load sample data here if you have fixtures

# 7) Start Redis
redis-server   # or Memurai on Windows, or Docker: docker run -p 6379:6379 redis

# 8) Run workers (two terminals)
celery -A core worker -l info
celery -A core beat -l info   # for scheduled tasks

# 9) Run Django
python manage.py runserver
